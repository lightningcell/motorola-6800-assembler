; Motorola 6800 Example Program
; Simple loop to add numbers 1-10

        ORG     $0100       ; Start at address $0100

START:  LDA     #$00        ; Clear accumulator
        STA     SUM         ; Initialize sum to 0
        LDA     #$01        ; Load counter with 1

LOOP:   ADD     SUM         ; Add current sum
        STA     SUM         ; Store new sum
        LDA     COUNTER     ; Load counter
        ADD     #$01        ; Increment counter
        STA     COUNTER     ; Store counter
        CMP     #$0A        ; Compare with 10
        BNE     LOOP        ; Branch if not equal

        SWI                 ; Halt program

; Variables
COUNTER: FCB    $01         ; Counter variable
SUM:     FCB    $00         ; Sum variable

        END                 ; End of program
